#include <iostream>
using namespace std;

int main()
{
	float val1,val2;
	char operateur;
	if ( val1-val2){
    float resultat;
		resultat= val1-val2;
		cout<< "voici la difference :";
	}

	cout <<"saisir la valeur : ";
	cin >> val1 >> operateur >> val2;
	float resultat;
	resultat= val1+val2;
	cout<< " voici la somme : " <<resultat <<std::endl;

system("PAUSE");

	return 0;

}
