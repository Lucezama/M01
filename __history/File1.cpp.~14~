#include <iostream>
using namespace std;

int main()
{
	float val1,val2;
	char operateur;
	if (operateur == '+') {
		float resultat;
		resultat = val1 + val2;
		cout<< " resultat : " <<resultat <<std::endl;

	}
	else if (operateur =='-') {
			 float resultat;
			 resultat = val1 - val2;
				cout<< " la difference : " <<resultat <<std::endl;
		 }
	else if (operateur =='*') {
			 float resultat;
			 resultat = val1*val2;
			  cout<< " le produit : " <<resultat <<std::endl;
		 }
	else if (operateur =='/') {
			 float resultat;
			 resultat =val1/val2;
			   cout<< " le quotion : " <<resultat <<std::endl;
		 }
	cout <<"saisir la valeur : ";
	cin >> val1 >> operateur >> val2;
	float resultat;
	resultat= val1+val2;
	cout<< " voici la somme : " <<resultat <<std::endl;

system("PAUSE");

	return 0;

}
